<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <title>@ViewBag.Title</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
</head>

<body class="d-flex flex-column h-100">
    <header>
        <nav class="navbar bg-dark navbar-dark">
            <div class="container-fluid">
                <span class="navbar-text">@ViewBag.Title</span>
                <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse"
                    data-bs-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="bases" asp-action="index">Список информационных баз</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-shrink-0">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>

    <footer class="footer mt-auto py-3 bg-dark">
        <div class="container">
            <span class="text-muted">Created by <a href="https://github.com/ReconixRu">Владислав Мосин</a></span>
        </div>
    </footer>

    @RenderSection("Script", false)
</body>

</html>